{
    "name": "echopress-ai",
    "version": "1.0.0",
    "description": "EchoPress AI â€” Podcast to Blog Converter - Turn any episode into a polished, SEO ready article",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd apps/web && npm run dev",
        "dev:backend": "cd apps/api && npm run dev",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd apps/web && npm run build",
        "build:backend": "cd apps/api && npm run build",
        "test": "npm run test:frontend && npm run test:backend",
        "test:frontend": "cd apps/web && npm run test",
        "test:backend": "cd apps/api && npm run test",
        "lint": "npm run lint:frontend && npm run lint:backend",
        "lint:frontend": "cd apps/web && npm run lint",
        "lint:backend": "cd apps/api && npm run lint",
        "format": "prettier --write .",
        "type-check": "npm run type-check:frontend && npm run type-check:backend",
        "type-check:frontend": "cd apps/web && npm run type-check",
        "type-check:backend": "cd apps/api && npm run type-check"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "prettier": "^3.1.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}