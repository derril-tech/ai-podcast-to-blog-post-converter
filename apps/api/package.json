{
    "name": "@echopress/api",
    "version": "1.0.0",
    "description": "EchoPress AI Backend - FastAPI + Python 3.11 + Async SQLAlchemy",
    "private": true,
    "scripts": {
        "dev": "uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
        "start": "uvicorn app.main:app --host 0.0.0.0 --port 8000",
        "build": "echo 'Python backend does not require build step'",
        "test": "pytest",
        "test:watch": "pytest --watch",
        "lint": "ruff check .",
        "format": "ruff format .",
        "type-check": "mypy .",
        "migrate": "alembic upgrade head",
        "migrate:create": "alembic revision --autogenerate -m"
    },
    "engines": {
        "python": ">=3.11.0"
    }
}