# EchoPress AI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=EchoPress AI
VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL with pgvector extension
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/echopress_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API (for GPT-4, Whisper, embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic API (for Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# STORAGE SETTINGS
# =============================================================================
# AWS S3 or Google Cloud Storage
STORAGE_BUCKET=echopress-ai-storage
STORAGE_REGION=us-east-1

# AWS Credentials (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Alternative: SMTP URL (overrides individual settings)
# SMTP_URL=smtp://username:password@smtp.gmail.com:587

# =============================================================================
# CMS INTEGRATIONS
# =============================================================================
# WordPress Integration
CMS_WORDPRESS_URL=https://your-wordpress-site.com
CMS_WORDPRESS_USERNAME=admin
CMS_WORDPRESS_PASSWORD=your-wordpress-password

# Ghost CMS Integration
CMS_GHOST_URL=https://your-ghost-site.com
CMS_GHOST_API_KEY=your-ghost-api-key

# Medium Integration
CMS_MEDIUM_TOKEN=your-medium-token

# =============================================================================
# ANALYTICS SETTINGS
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Search Console
GOOGLE_SEARCH_CONSOLE_KEY=your-search-console-key

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=524288000
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,ogg,flac
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================
MAX_CONCURRENT_TRANSCRIPTIONS=10
TRANSCRIPTION_TIMEOUT=3600
DRAFT_GENERATION_TIMEOUT=1800

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WHISPER_ASR=true
ENABLE_PYANNOTE_DIARIZATION=true
ENABLE_LANGGRAPH=true
ENABLE_VECTOR_SEARCH=true

# =============================================================================
# FRONTEND SETTINGS (for Next.js)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development, false for production
DEBUG=true

# Development database (SQLite for local development)
# DATABASE_URL=sqlite+aiosqlite:///./echopress_ai.db

# Development storage (local file system)
# STORAGE_BUCKET=./uploads

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure for production deployment

# Production database
# DATABASE_URL=postgresql+asyncpg://prod_user:prod_password@prod_host:5432/echopress_ai_prod

# Production storage
# STORAGE_BUCKET=echopress-ai-prod-storage

# Production CORS
# ALLOWED_ORIGINS=https://app.echopress.ai,https://echopress.ai

# Production hosts
# ALLOWED_HOSTS=api.echopress.ai,echopress.ai

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate secrets regularly in production
# 4. Use environment-specific configurations
# 5. Test all integrations before deploying
